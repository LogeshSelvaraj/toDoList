<%- include("header") -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">


        <% newListItems.forEach(function(items){ %>
            <form action="/checkbox" method="post">
            <div class="item">

                    <input type="checkbox" name="checkbox"  value="<%=items._id%>" onchange="this.form.submit()">
                    <p>
                        <%= items.work %>
                    </p>
                    <input type="hidden" name="listTitle" value="<%=listTitle%>">
            </div>
            </form>
            <% }) %>


                <form class="item form" action="/" method="post">
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                    <button type="submit" name="list" value="<%=listTitle%>">+</button>
                </form>
    </div>

    <%- include("footer") -%>